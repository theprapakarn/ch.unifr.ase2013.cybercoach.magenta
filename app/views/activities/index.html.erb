<h1>Listing activities</h1>

<table>
  <thead>
    <tr>
      <th>Reference</th>
      <th>Name</th>
      <th>User</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Sport</th>
      <th>Owner</th>
      <th>Entry</th>
      <th>Is proxy</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.reference %></td>
        <td><%= activity.name %></td>
        <td><%= activity.user_id %></td>
        <td><%= activity.start_time %></td>
        <td><%= activity.end_time %></td>
        <td><%= activity.sport %></td>
        <td><%= activity.owner %></td>
        <td><%= activity.entry %></td>
        <td><%= activity.is_proxy %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


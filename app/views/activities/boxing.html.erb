<script>
    var crudServiceBaseUrl = "/boxing";
</script>

<script id="editor" type="text/x-kendo-template">
  #if(id == ""){#
  <div style="padding: 0px 20px 0px 20px;">
    <table class="metrotable">
      <tr>
        <td>
          <h5>Title:</h5>
          <input type="text" data-bind="value: textValue" class="k-textbox" style="width: 100%;"/>
        </td>
      </tr>
      <tr>
        <td>
          <h5>Start:</h5>
          <input data-role="datetimepicker" data-bind="value: start" style="width: 100%;"/>
        </td>
      </tr>
      <tr>
        <td>
          <h5>End:</h5>
          <input data-role="datetimepicker" data-bind="value: end" style="width: 100%;"/>
        </td>
      </tr>
      <tr>
        <td>
          <h5>Location:</h5>
          <input type="text" data-bind="value: location" class="k-textbox" style="width: 100%;"/>
        </td>
      </tr>
      <tr>
        <td>
          <h5>Comment:</h5>
          <textarea data-bind="value: comment" class="k-textbox" style="height: 40px; width: 100%;"></textarea>
        </td>
      </tr>
      <tr>
        <td>
          <h5>Participants:</h5>
          <select multiple id="participants"
                   data-bind="value: participants" style="width: 100%;">
          </select>
        </td>
      </tr>
      <tr>
        <td>
          <h5>Round Duration: </h5>
          <input data-role="numerictextbox"
                 data-min="0"
                 data-bind="value: roundduration"
                 style="width: 100%;">
          </input>
        </td>
      </tr>
    </table>
  </div>
  #}else{#
  #if(info.From == "Google"){#
  <p>
    #: kendo.toString(start, "hh:mm") # - #: kendo.toString(end, "hh:mm") #
  </p>

  <h3>#: title #</h3>

  <div style="background-color: rgb(169,169,169);">
    This text is enclosed in a box.
  </div>
  #}else if(info.From == "Suggestion"){#
  <div style="padding: 0px 20px 0px 20px;">
    <table class="weathertable">
      <tr>
        <th>Description</th>
        <th>Morning</th>
        <th>Noon</th>
        <th>Evening</th>
      </tr>
      <tr>
        <td>#: info.Description #</td>
        <td>#: info.Morning #</td>
        <td>#: info.Noon #</td>
        <td>#: info.Evening #</td>
      </tr>
    </table>
  </div>
  #}else{#

  <div style="padding: 0px 20px 0px 20px;">
    <table class="weathertable">
      <tr>
        <th>Sport</th>
        <th>Title</th>
      </tr>
      <tr>
        <td>#: sport #</td>
        <td>#: title #</td>
      </tr>
      <tr>
        <th>Start</th>
        <th>End</th>
      </tr>
      <tr>
        <td>#: start #</td>
        <td>#: end #</td>
      </tr>
      <tr>
        <th>Location</th>
        <th>Round Duration</th>
       </tr>
      <tr>
        <td>#: entry.location #</td>
        <td>#: entry.roundduration #</td>
      </tr>
      <tr>
        <th>Comment</th>
        <th></th>
      </tr>
      <tr>
        <td>#: entry.comment #</td>
      </tr>
      <tr>
        <th>Participants</th>
        <th></th>
      </tr>
      <tr>
        # for (var i = 0; i < participants.length; i++) { #
        <td>#= participants[i].Text #</td>
        # } #
      </tr>
    </table>
  </div>
  #}#
  #}#
</script>

<%= render 'base' %>